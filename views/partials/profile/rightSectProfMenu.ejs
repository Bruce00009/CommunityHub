            <img src="/images/backimg.jpg" alt="user">
            <% } %>
            <div class="title">
              <%= topic.title %>
            </div>
          </div>
        </a>
      <% } %>

          </div>

          <% if(user.myTopics.actMyTopics.length > 5){ %>
            <div class="left-prof-sect-my-topics-see-more my-1">
              <form action="/profile/<%= user._id %>/sortTopics/MoreMyTopics" method="POST" class="see-more-my-topics">
              <button type="submit" class="btn btn-block see-more-prof-btn">
                See More
              </button>
              </form>
            </div>
          <% } %>

          </div>

        </div>

      </div>

    </div><!-- card-body end -->


      </div>
    </div>
  </div>


      </div>



    </aside>
        
  </main>
  
</div>
