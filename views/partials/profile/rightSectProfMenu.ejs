                <img src="/images/vert-search-filter-white.svg" class="s-left-prof-filter">
              </button>          

            <div class="dropdown-menu dropdown-menu-right bg-custom">

              <div>
                  <form action="/profile/<%= user._id %>/sortTopics/A-Z" method="POST" class="text-center py-1 toggle-options sortMyTopics hover-transparent-gray">
